---
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/logo.svg" />  <!-- Reference logo -->
  </head>
  <body class="bg-white text-gray-900">
    <nav class="bg-gray-100 py-4">
      <div class="max-w-4xl mx-auto px-4 flex justify-between items-center">
        <a href="/" class="text-2xl font-bold">Prolifik Ventures</a>
        <ul class="flex space-x-4">
          <li><a href="/about" class="text-gray-700 hover:text-gray-900">About</a></li>
          <!-- Add/remove links as needed, e.g., Blog if keeping -->
          <li><a href="mailto:info@prolifik.one" class="text-gray-700 hover:text-gray-900">Contact</a></li>
        </ul>
      </div>
    </nav>
    <slot />
    <footer class="bg-gray-100 py-4 mt-8">
      <div class="max-w-4xl mx-auto px-4 text-center text-gray-600">
        &copy; 2025 Prolifik Ventures, LLC. All rights reserved.
      </div>
    </footer>
  </body>
</html>

<style is:global>
  body { font-family: system-ui, sans-serif; }
  a { text-decoration: none; }
  @media (max-width: 640px) {
    nav ul { flex-direction: column; space-x-0; space-y-2; }
  }
</style>