---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Prolifik Ventures, LLC">
  <main>
    <header class="text-center py-12">
      <h1 class="text-4xl font-bold text-gray-900">Prolifik Ventures, LLC</h1>
      <p class="text-xl text-gray-600 mt-4">Business Consulting Experts</p>
    </header>
    <section class="max-w-4xl mx-auto px-4">
      <p class="text-lg text-gray-700 mb-8">
        We provide innovative consulting services to help your business thrive. Contact us to learn more.
      </p>
      <a href="mailto:info@prolifik.one" class="bg-gray-800 text-white px-6 py-3 rounded hover:bg-gray-700">Get in Touch</a>
    </section>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    max-width: calc(100% - 2rem);
    font-family: system-ui, sans-serif;
  }
  @media (min-width: 768px) {
    main { max-width: 800px; }
  }
</style>
