---
import Layout from '../../layouts/Layout.astro'; // Adjust path if needed
import { getCollection, render } from 'astro:content'; // Added render import

export async function getStaticPaths() {
  const blogEntries = await getCollection('blog');
  return blogEntries.map((entry) => ({
    params: { slug: entry.id }, // Changed slug to id
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await render(entry); // Changed to render(entry)
---

<Layout title={`${entry.data.title} - Prolifik Ventures`}>
  <article>
    <h1>{entry.data.title}</h1>
    <p>Published: {entry.data.pubDate.toLocaleDateString()}</p>
    <Content />
  </article>
</Layout>

