---
import Layout from '../../layouts/Layout.astro'; // Adjust path if needed
import { getCollection } from 'astro:content';

const posts = await getCollection('blog');
---

<Layout title="Blog - Prolifik Ventures">
  <h1>Blog</h1>
  <ul>
    {posts.map((post) => (
      <li>
        <a href={`/blog/${post.id}`}>{post.data.title}</a> <!-- Changed slug to id -->
        <p>{post.data.pubDate.toLocaleDateString()}</p>
      </li>
    ))}
  </ul>
</Layout>

<style>
  /* (Your existing responsive styles here) */
</style>